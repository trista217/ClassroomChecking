<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:columnCount="2">
    
    <TextView
        android:id="@+id/startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="@string/startdate" />
    
    <EditText
        android:id="@+id/startdateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:cursorVisible="false"
        android:editable="false" />
    
    <TextView
        android:id="@+id/enddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/enddate" />

    <EditText
        android:id="@+id/enddateDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:cursorVisible="false"
        android:editable="false" />
    
    <TextView
        android:id="@+id/starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:text="@string/starttime" />

    <EditText
        android:id="@+id/starttimeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:cursorVisible="false"
        android:editable="false" />
    
	<TextView
        android:id="@+id/endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="@string/endtime" />

    <EditText
        android:id="@+id/endtimeDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:cursorVisible="false"
        android:editable="false" />

    <TextView
        android:id="@+id/classroomtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:text="@string/classroomtype" />

    <Button
        android:id="@+id/classroomtypebtn"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/classroomnoofpeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:text="@string/classroomnoofpeople" />
    
	<Button
	    android:id="@+id/classroomnoofpeoplebtn"
	    android:layout_width="210dp"
	    android:layout_height="wrap_content"
	    android:layout_column="1"
	    android:layout_row="5"
	    android:textSize="14sp" />
	
	<TextView
        android:id="@+id/classroomno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:text="@string/classroomno" />

    
    <Button
		android:id="@+id/classroomnobtn"
		android:layout_height="wrap_content"
		android:layout_width="210dp"
		android:layout_row="6"
        android:layout_column="1"
		android:textSize="14sp"/>

    <TextView
        android:id="@+id/classroomstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0"
        android:text="@string/classroomstatus" />

    <Spinner
        android:id="@+id/classroomstatusspinner"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="7"
        android:prompt="@string/classroomstatustip" />

    <Button
        android:id="@+id/searchbtn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_row="8"
        android:layout_gravity="center"
        android:text="@string/search" >

    </Button>

    <Button
        android:id="@+id/hissearchbtn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_row="9"
        android:layout_gravity="center"
        android:text="@string/hissearch" >

    </Button>
    

</GridLayout>
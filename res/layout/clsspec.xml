<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:columnCount="2"
    >

<!--     <TextView
        android:id="@+id/spec_classroomnotext"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="0"
        android:text="@string/classroomno" /> -->

    <TextView
        android:id="@+id/spec_classroomno"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="0"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="18sp"
        android:paddingLeft="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"/>
    
    <TextView
        android:id="@+id/spec_classroomtypetext"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="1"
        android:text="@string/classroomtype"
        android:paddingLeft="6dp" />

    <TextView
        android:id="@+id/spec_classroomtype"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="1"/>
    
    <TextView
        android:id="@+id/spec_classroomnoofpeopletext"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="2"
        android:text="@string/classroomnoofpeople"
        android:paddingLeft="6dp"
        android:paddingBottom="6dp" />

    <TextView
        android:id="@+id/spec_classroomnoofpeople"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="2"
        android:paddingBottom="6dp"/>
    
    <TextView
        android:id="@+id/spec_classroomstatusspectext"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="left"
        android:layout_row="3"
        android:background="#222"
        android:textColor="@android:color/primary_text_dark"
        android:text="@string/classroomstatusspec"
        android:paddingLeft="6dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp" />
    
    <ListView
        android:id="@+id/spec_statuslist"
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_vertical"
        android:layout_row="4"
        android:dividerHeight="2dp" >

    </ListView>

</GridLayout>